<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>Project</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <AssemblyName>Project</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Database\empty_musicdb_template.sqlite3.sql" />
    <None Remove="UI\Images\Play.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Database\empty_musicdb_template.sqlite3.sql">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="UI\Images\Play.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="UI\MVVM\Model\" />
    <Folder Include="UI\MVVM\ViewModel\" />
    <Folder Include="UI\MVVM\View\" />
    <Folder Include="UI\Theme\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SQLite" Version="1.0.115.5" />
  </ItemGroup>

</Project>
