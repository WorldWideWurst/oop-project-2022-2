<UserControl x:Class="Project.UI.MVVM.View.Library"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.UI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                  Background="#FF454545">
        <Grid>
            <TextBlock Text="Bibliothek" Foreground="White" FontSize="40"/>
            <Button Click="PlaylistButton_Click"
                    Content="BeispielPlaylist"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Width="100" Height="40"
                    Margin="0,50,0,0" />
            <Button Click="SongButton_Click"
                    Content="BeispielSong"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Width="100" Height="40"
                    Margin="0,90,0,0"/>
            
            
            <local:Playlist x:Name="Playlist1" Visibility="Collapsed"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"/>
            <local:Song x:Name="Song1" Visibility="Collapsed"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
        </Grid>
    </ScrollViewer>
</UserControl>
