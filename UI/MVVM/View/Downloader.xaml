<UserControl x:Class="Project.UI.MVVM.View.Downloader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.UI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer CanContentScroll="True"
                  HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto"
                  Padding="10,0,10,0">
        <StackPanel>
            <TextBlock  Text="Downloader" 
                        Foreground="White" 
                        FontSize="40"
                        Margin="0,0,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition MinHeight="70"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox    Name="URLInput"
                            VerticalContentAlignment="Center"
                            MinWidth="200"
                            Text="Hier einen Link eingeben!"
                            Foreground="Gray"
                            Grid.Row="0"
                            GotFocus="HintNull" 
                            LostFocus="HintShow"/>
                <Button Content="Suchen"
                        Style="{DynamicResource StandardButtonTheme}"
                        Click="DownloaderButton_Click"
                        Height="40" Width="80"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top"
                        Grid.Column="1"/>
                <Grid Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Grid.Row="1">
                    <TextBlock Name="NoSelectionDisplay">Nichts ausgewählt.</TextBlock>
                    <DockPanel Name="SelectionDisplay"
                               DataContext="{Binding CurrentEntry}">
                        <Image Source="{Binding Path=CurrentEntry.Image}"
                               DockPanel.Dock="Left"/>
                        <Rectangle DockPanel.Dock="Right"
                                   VerticalAlignment="Stretch"
                                   Width="100"/>
                    </DockPanel>
                </Grid>
                <TextBox Grid.Column="2"
                         Grid.Row="0"
                         Grid.RowSpan="2"
                         Text="settings hier"/>
            </Grid>
            <!-- With DataTemplate -->
            <TextBlock>Warteschlange</TextBlock>
            <ListBox ItemsSource="{Binding Queue}" 
                     BorderBrush="Transparent" 
                     Grid.IsSharedSizeScope="True"
                     HorizontalContentAlignment="Stretch"
                     x:Name="Results">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="4"
                              Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--Image Source="{Binding Thumbnail}"/-->
                            <TextBlock Grid.Column="1" Text="{Binding FileName}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
