<UserControl x:Class="Project.UI.MVVM.View.Downloader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.UI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer CanContentScroll="True"
                  HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto"
                  Padding="10,0,10,0">
        <StackPanel>
            <TextBlock  Text="Downloader" 
                        Foreground="White" 
                        FontSize="40"/>
            <TextBlock  Foreground="White" 
                        Text="Ziel hier eingeben"
                        HorizontalAlignment="Center" 
                        FontSize="20"/>
            <TextBox    Name="URLInput"
                        Margin="100,20,100,0"
                        MinWidth="200"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"/>
            <Button Content="Herunterladen"
                    Style="{DynamicResource StandardButtonTheme}"
                    Click="DownloaderButton_Click" 
                    Margin="0,20,0,0" 
                    Height="40" Width="220"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"/>
            <TextBlock  Text="Ergebnisse"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Grid.ColumnSpan="2"
                        Margin="0,20,0,0"/>
            <!-- With DataTemplate -->
            <ListBox ItemsSource="{Binding}" 
                     BorderBrush="Transparent" 
                     Grid.IsSharedSizeScope="True"
                     HorizontalContentAlignment="Stretch"
                     x:Name="Results">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="4"
                              Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--Image Source="{Binding Thumbnail}"/-->
                            <TextBlock Grid.Column="1" Text="{Binding FileName}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
