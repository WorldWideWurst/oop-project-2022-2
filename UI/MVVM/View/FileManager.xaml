<UserControl x:Class="Project.UI.MVVM.View.FileManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.UI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  Background="#FF454545">
        <Grid>
            <TextBlock Text="FileManager" Foreground="White" FontSize="40" Height="auto" VerticalAlignment="Top" Margin="10,0,10,0"/>
            <Button x:Name="SelectMusicDir" Content="Musikordner Importieren" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top" FontSize="16" Click="SelectMusicDir_Click" Width="195"/>
            <TextBlock x:Name="ImportReport" HorizontalAlignment="Left" Margin="210,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="25" FontSize="16"><Run/><LineBreak/><Run/></TextBlock>
            <TextBox x:Name="MusicDirInput" HorizontalAlignment="Left" Margin="10,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" Height="25"/>
        </Grid>
    </ScrollViewer>

</UserControl>
