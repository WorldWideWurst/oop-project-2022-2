<UserControl x:Class="Project.UI.MVVM.View.MusicImporter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.UI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                  VerticalScrollBarVisibility="Auto"
                  Background="Transparent"
                  Padding="10px">
        <StackPanel>
            <TextBlock Text="Musik importieren" 
                       Foreground="White" 
                       FontSize="40" 
                       Margin="0,0,0,20px"/>
            <Button     x:Name="SelectMusicDir" 
                        Style="{StaticResource StandardButtonTheme}"
                        FontSize="20"
                        Click="SelectMusicDir_Click"
                        Content="Ordner Auswählen" 
                        Margin="0,0,0,20"/>
            <Expander x:Name="SuccessfulListExpander" Header="Erfolgreich" Foreground="Green">
                <ListView x:Name="SuccessfulList" MaxHeight="200px">
                    
                </ListView>
            </Expander>
            <Expander Header="Fehlerhaft" x:Name="ErrorListExpander" Foreground="Red">
                <ListView x:Name="ErrorList" MaxHeight="200px">

                </ListView>
            </Expander>
            <Expander  x:Name="AlreadyExistsListExpander" Header="Schon Vorhanden" Expanded="AlreadyExistsExpander_Expand" Foreground="Gray">
                <ListView x:Name="AlreadyExistsList" MaxHeight="200px">

                </ListView>
            </Expander>


        </StackPanel>
    </ScrollViewer>

</UserControl>
