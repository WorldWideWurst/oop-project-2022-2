<UserControl x:Class="Project.UI.MVVM.View.MusicImporter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.UI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                  VerticalScrollBarVisibility="Auto"
                  Background="Transparent"
                  Padding="10px">
        <StackPanel>
            <TextBlock Text="Musik importieren" 
                       Foreground="White" 
                       FontSize="40" 
                       Margin="0,0,0,20px"/>
            <Button     x:Name="SelectMusicDir" 
                        Style="{StaticResource StandardButtonTheme}"
                        Height="50"
                        FontSize="20"
                        Click="SelectMusicDir_Click"
                        Content="Ordner Auswählen" 
                        Margin="0,0,0,20"/>
            <Expander x:Name="SuccessfulListExpander"
                      Foreground="Green"
                      Style="{StaticResource StandardExpanderTheme}">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Erfolgreich"/>
                        <TextBlock Text=" ["/>
                        <TextBlock FontWeight="Bold" Text="{Binding}"/>
                        <TextBlock Text="]"/>
                    </StackPanel>
                </Expander.Header>
                <ListView x:Name="SuccessfulList"
                          MaxHeight="200px"
                          Style="{StaticResource ExpanderListTheme}"/>
            </Expander>

            <Expander x:Name="ErrorListExpander" 
                      Foreground="Red"
                      IsExpanded="True"
                      Style="{StaticResource StandardExpanderTheme}">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Fehlerhaft ["/>
                        <TextBlock FontWeight="Bold" Text="{Binding}"/>
                        <TextBlock Text="]"/>
                    </StackPanel>
                </Expander.Header>
                <ListView x:Name="ErrorList" 
                          MaxHeight="200px"
                          Style="{StaticResource ExpanderListTheme}"/>
            </Expander>

            <Expander x:Name="ConvertedListExpander" 
                      Foreground="Yellow"
                      Style="{StaticResource StandardExpanderTheme}">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Konvertiert ["/>
                        <TextBlock FontWeight="Bold" Text="{Binding}"/>
                        <TextBlock Text="]"/>
                    </StackPanel>
                </Expander.Header>
                <ListView x:Name="ConvertedList" 
                          MaxHeight="200px"
                          Style="{StaticResource ExpanderListTheme}"/>
            </Expander>

            <Expander  x:Name="AlreadyExistsListExpander"
                       Expanded="AlreadyExistsExpander_Expand" 
                       Foreground="LightGray"
                       Style="{StaticResource StandardExpanderTheme}">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Schon vorhanden ["/>
                        <TextBlock FontWeight="Bold" Text="{Binding}"/>
                        <TextBlock Text="]"/>
                    </StackPanel>
                </Expander.Header>
                <ListView x:Name="AlreadyExistsList" 
                          MaxHeight="200px"
                          Style="{StaticResource ExpanderListTheme}"/>
            </Expander>

        </StackPanel>
    </ScrollViewer>

</UserControl>
